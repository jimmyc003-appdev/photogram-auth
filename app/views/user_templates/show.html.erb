<div class="card" style="width: 18rem;">
  <div class="card-header">
    <%= @user.username %>
  </div>
</div>


<hr>

<dl>
  <dt>
    Email
  </dt>
  <dd>
    <%= @user.email %>
  </dd>

  <dt>
    Username
  </dt>
  <dd>
    <%= @user.username %>
  </dd>
</dl>

<hr>

<div class="card mt-4">
  <div class="card-header">
    <a href="/users/<%= @user.id %>"><%= @user.username %></a>
  </div>
  <ul class="list-group list-group-flush">
    <% Photo.where(user_id: @user.id).each do |photo| %>
      <li class="list-group-item">
        <!--<a href="/photos/<#%= photo.student_id %>">-->
          <img width="500" src="<%= Photo.find(photo.id).image %>">
        </a>
      </li>
       <li class="list-group-item">
        <!--<a href="/photos/<#%= photo.student_id %>">-->
          <%= Photo.find(photo.id).caption %>
        </a>
      </li>
    <% end %>
  </ul>
</div>